---
interface SkillIcon {
  name: string;
  img: string;
}

interface SkillCategory {
  name: string;
  experience?: string;
  skills: SkillIcon[];
}

const skillCategories: SkillCategory[] = [
  {
    name: "Data Science & AI",
    experience: "3+ Years XP",
    skills: [
      { name: "Python", img: "/img/skills/python.png" },
      { name: "PyTorch", img: "/img/skills/pytorch.png" },
      { name: "Tensorflow", img: "/img/skills/tensorflow.png" },
    ]
  },
  {
    name: "Front End",
    experience: "3+ Years XP",
    skills: [
      { name: "HTML", img: "/img/skills/html.png" },
      { name: "CSS", img: "/img/skills/css.png" },
      { name: "javascript", img: "/img/skills/js.png" },
    ]
  },
  {
    name: "BackEnd",
    experience: "N/A",
    skills: [
      { name: "MySQL", img: "/img/skills/mysql.png" },
      { name: "Django", img: "/img/skills/django.png" },
      { name: "Node.js", img: "/img/skills/nodejs.png" },
      { name: "MongoDB", img: "/img/skills/mongodb.png" },
    ]
  },
  {
    name: "Cloud & DevOps",
    experience: "N/A",
    skills: [
      { name: "AWS", img: "/img/skills/aws.png" },
      { name: "Azure", img: "/img/skills/azure.png" },
      { name: "GCP", img: "/img/skills/gcp.png" },
      { name: "Docker", img: "/img/skills/docker.png" },
      { name: "Bash", img: "/img/skills/bash.png" },
      { name: "git", img: "/img/skills/git.png" },
    ]
  }
];
---

<div class="skills-container">
  <h2 class="text-xl font-bold text-white mb-6">Technical Skills</h2>
  
  <div class="space-y-8">
    {skillCategories.map((category) => (
      <div class="category-section">
        <div class="flex items-center gap-2 mb-4">
          <h3 class="text-lg font-semibold text-white">
            {category.name}
          </h3>
          {category.experience && (
            <span class="text-xs text-gray-400 border border-gray-700 rounded px-2 py-1">
              {category.experience}
            </span>
          )}
        </div>
        
        <div class="skills-grid grid grid-cols-2 sm:grid-cols-3 md:grid-cols-5 gap-4">
          {category.skills.map((skill) => (
            <div class="skill-item flex flex-col items-center">
              <div class="icon-wrapper p-3 bg-gray-800 rounded-xl hover:bg-gray-700 transition-all duration-300 mb-2">
                <img 
                  src="/img/skills/profile.png"
                  alt={skill.name} 
                  title={skill.name}
                  class="w-10 h-10 object-contain filter grayscale hover:grayscale-0 transition-all duration-300"
                />
              </div>
              <span class="text-xs text-gray-400 text-center">{skill.name}</span>
            </div>
          ))}
        </div>
      </div>
    ))}
  </div>
</div>


<style>
  .skills-container {
    width: 100%;
  }
  
  .icon-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 60px;
    height: 60px;
  }
  
  .icon-wrapper:hover {
    transform: translateY(-5px);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
  }
  
  .icon-wrapper img {
    width: 40px;
    height: 40px;
    object-fit: contain;
  }
  
  .category-header {
    width: 100%;
    position: relative;
  }
  
  .category-header h3 {
    display: inline-block;
  }
  
  @media (max-width: 640px) {
    .skills-grid {
      grid-template-columns: repeat(2, 1fr);
    }
    
    .icon-wrapper {
      width: 50px;
      height: 50px;
    }
  }
</style>