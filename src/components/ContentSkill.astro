      { name: "Scikit-Learn", img: "/img/skills/profile.png" },
      { name: "R", img: "/img/skills/profile.png" }
    ]
  },
  {
    name: "Programming",
    experience: "3+ Years XP",
    skills: [
      { name: "JavaScript", img: "/img/skills/profile.png" },
      { name: "TypeScript", img: "/img/skills/profile.png" },
      { name: "SQL", img: "/img/skills/profile.png" },
      { name: "Java", img: "/img/skills/profile.png" },
      { name: "C++", img: "/img/skills/profile.png" }
    ]
  },
  {
    name: "Front End",
    experience: "2+ Years XP",
    skills: [
      { name: "HTML", img: "/img/skills/profile.png" },
      { name: "CSS", img: "/img/skills/profile.png" },
      { name: "Vue.js", img: "/img/skills/profile.png" },
      { name: "React", img: "/img/skills/profile.png" },
      { name: "Tailwind CSS", img: "/img/skills/profile.png" }
    ]
  },
  {
    name: "BackEnd",
    experience: "3+ Years XP",
    skills: [
      { name: "Node.js", img: "/img/skills/profile.png" },
      { name: "Django", img: "/img/skills/profile.png" },
      { name: "FastAPI", img: "/img/skills/profile.png" },
      { name: "Flask", img: "/img/skills/profile.png" },
      { name: "Express", img: "/img/skills/profile.png" }
