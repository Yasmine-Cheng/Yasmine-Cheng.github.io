    ]
  }
];
---

<div class="skills-container space-y-8">
  {skillCategories.map((category) => (
    <div class="category-section">
      <div class="category-header flex items-center mb-4">
        <h3 class="text-xl font-bold text-white border-b border-gray-700 pb-2">
          {category.name}
        </h3>
        {category.experience && (
          <span class="text-xs text-gray-400 ml-4">{category.experience}</span>
        )}
      </div>
      
      <div class="skills-grid grid grid-cols-2 sm:grid-cols-3 md:grid-cols-5 gap-4">
        {category.skills.map((skill) => (
          <div class="skill-item flex flex-col items-center">
            <div class="icon-wrapper p-3 bg-gray-800 rounded-xl hover:bg-gray-700 transition-all duration-300 mb-2">
              <img 
                src={skill.img}
                alt={skill.name} 
                title={skill.name}
                class="w-10 h-10 object-contain filter grayscale hover:grayscale-0 transition-all duration-300"
              />
            </div>
            <span class="text-xs text-gray-400">{skill.name}</span>
          </div>
        ))}
      </div>
    </div>
  ))}
</div>

<style>
  .skills-container {
    width: 100%;
  }
  
  .icon-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 60px;
    height: 60px;
  }
  
  .icon-wrapper:hover {
    transform: translateY(-5px);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
  }
  
  .icon-wrapper img {
    width: 40px;
    height: 40px;
    object-fit: contain;
  }
  
  .category-header {
    width: 100%;
    position: relative;
  }
  
  .category-header h3 {
    display: inline-block;
  }
  
  @media (max-width: 640px) {
    .skills-grid {
      grid-template-columns: repeat(2, 1fr);
    }
    
    .icon-wrapper {
      width: 50px;
      height: 50px;
    }
  }
</style>